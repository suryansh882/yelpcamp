<%- include('./partials/header.ejs') %>

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="row">
        <div style="width: 25rem;">
            <div class="card shadow">
                <div class="card-body">
                    <form class="form-signin" action="/register" method="POST">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Sign Up</h1>
                        <p>
                            <small class="text-muted">Fields marked * are required.</small>
                        </p>
                        <div class="mb-3">
                            <label for="inputUsername" class="form-label">Username*</label>
                            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
                        </div>
                        
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password*</label>
                            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="inputUsername" class="form-label">Admin Code</label>
                            <input type="text" id="inputUsername" class="form-control" name="adminCode" placeholder="Admin Code" autofocus>
                        </div>
                        
                        <button class="btn btn-lg btn-success btn-block" type="submit">Sign Up</button>
                    </form>
                    <div class="form-signin text-center">
                        <span>Have an account? </span> <a href="/login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>