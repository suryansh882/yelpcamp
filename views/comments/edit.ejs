<%- include('../partials/header.ejs') %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center mt-5">
            <h1 style="text-align:center">Edit Comment</h1>
        </div>

        <div class="col-xs-12 col-md-6 col-lg-4">
            
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="post">
                <div class="form-group mb-3 mt-3">
                    <label class="form-label" for="inputText">Text</label>
                    <input type="text" id="inputText" class="form-control" name="comment[text]" value="<%=comment.text%>" required autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>      
            </form>

            <a href="/campgrounds/<%= campground_id %>">Go Back</a>  

        </div>  

        

    </div>


<%- include('../partials/footer.ejs') %>