<%- include('../partials/header.ejs') %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>    
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group mr-sm-3 mt-2">
                      <input type="text" name="search" class="form-control" placeholder="Campground Search...">
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Search</button>
                </form>

            </p>
        </div>
    </header>
    
    <div class="row text-center" >
        <div class="col-md-12">
            <% if(noMatch!==null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card"">
                    <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <a href="/campgrounds/<%= campground.id %>" class="btn btn-info">More Info</a>
                    </div>
                  </div>
            </div>
                
        <% }); %>

    </div>




<%- include('../partials/footer.ejs') %>