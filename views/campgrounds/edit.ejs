<%- include('../partials/header.ejs') %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align:center">Edit <%=campground.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-5">
        
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="post">
            <div class="form-group mb-3 mt-3">
                <label class="form-label" for="inputName">Name</label>
                <input type="text" id="inputName" class="form-control" name="campground[name]" value="<%= campground.name %>" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="inputPrice">Price</label>
                <input class="form-control" id="inputPrice" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step ="0.01" required>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="inputImage">Image</label>
                <input type="text" id="inputImage" class="form-control" name="campground[image]" value="<%= campground.image %>" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="inputDescription">Description</label>
                <input type="text" id="inputDescription" class="form-control" name="campground[description]" value="<%= campground.description %>" required autofocus>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>      
        </form>

        <a href="/campgrounds">Go Back</a>  

    </div>  

</div>


<%- include('../partials/footer.ejs') %>